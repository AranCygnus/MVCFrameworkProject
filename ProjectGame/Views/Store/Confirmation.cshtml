@{
    ViewData["Title"] = "Confirm";
}

<head>
    <link rel="stylesheet" href="~/css/styleStore.css" asp-append-version="true" />
</head>


<section>
    <div class="row">
        <!---------- Aside Sidebar ---------->
        @await Html.PartialAsync("_StoreAside")

        <!---------- Main Content---------->
        <div class="col-md-9">

            <h2>Thank you for your Order!</h2>
            <h5>The order has been completed, your order number is <strong class="text-warning">@ViewData["OrderId"]</strong></h5>

            <hr class="my-3"/>
            <!---------- Button ---------->
            <div class="mt-3 d-flex gap-2">
                <a asp-action="History" class="btn btn-primary">Purchase History</a>
                <a asp-action="Index" class="btn btn-outline-secondary">Continue Shopping</a>
                <a asp-action="Payment" asp-route-orderId="@ViewData["OrderId"]" class="btn btn-success">Pay Now</a>
            </div>

        </div>
    </div>
</section>

