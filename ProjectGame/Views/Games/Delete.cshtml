@model ProjectGame.Models.Game
@{
    ViewData["Title"] = "Delete Game";
}

<head>
    <link rel="stylesheet" href="~/css/styleGame.css" asp-append-version="true" />
</head>


<section>
    <div class="row">
        <!---------- Aside Sidebar ---------->
        @await Html.PartialAsync("_GameAside")

        <!---------- Main Content---------->
        <div class="col-md-9">
            <h2>Delete Game</h2>
            <h4 class="text-danger">Are you sure you want to delete this Game?</h4>

            <hr class="my-3" />
            <div class="container">
                <div class="col-md-8">
                    <dl class="row">
                        <dt class="col-sm-5">Game Title</dt>
                        <dd class="col-sm-7">@Model.Title</dd>

                        <dt class="col-sm-5">Platform</dt>
                        <dd class="col-sm-7">@Model.Platform?.Name</dd>

                        <dt class="col-sm-5">Release Date</dt>
                        <dd class="col-sm-7">@Model.ReleaseDate.ToString("yyyy/MM/dd")</dd>

                        <dt class="col-sm-5">Price</dt>
                        <dd class="col-sm-7">@Model.Price.ToString("C0")</dd>

                        <dt class="col-sm-5">Cover Image</dt>
                        <dd>
                            @if (Model.DataFiles != null)
                            {
                                <img asp-append-version="true" src="/Games/GetImage/@Model.ID" alt="Cover Image" class="img-fluid mt-2" style="max-height: 300px;" />
                            }
                            else if (Model.PlatformID == 1)
                            {
                                <img asp-append-version="true" src="~/images/noimages/PS5NoImage.jpg" alt="Cover Image" class="img-fluid mt-2" style="max-height: 300px;" />
                            }
                            else if (Model.PlatformID == 2)
                            {
                                <img asp-append-version="true" src="~/images/noimages/NSNoImage.jpg" alt="Cover Image" class="img-fluid mt-2" style="max-height: 300px;" />
                            }
                            else
                            {
                                <img asp-append-version="true" src="~/images/noimages/XboxNoImage.jpg" alt="Cover Image" class="img-fluid mt-2" style="max-height: 300px;" />
                            }
                        </dd>
                    </dl>
                </div>
            </div>

            <!---------- Button ---------->
            <form asp-action="Delete" method="post" enctype="multipart/form-data">
                <input type="hidden" asp-for="ID" />
                <button type="submit" class="btn btn-danger m-2" style="width:150px;">Delete</button>
                <a asp-action="Index" class="btn btn-secondary m-2" style="width:150px;">Cancel</a>
            </form>
        </div>
    </div>
</section>

